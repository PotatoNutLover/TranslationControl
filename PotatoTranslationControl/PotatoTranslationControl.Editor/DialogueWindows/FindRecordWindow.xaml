<Window x:Class="PotatoTranslationControl.Editor.DialogueWindows.FindRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PotatoTranslationControl.Editor.DialogueWindows"
        mc:Ignorable="d"
        Title="FindRecordWindow" Height="200" Width="400" Style="{StaticResource WindowDefault}" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Style="{StaticResource GridMain}">
        <UniformGrid Columns="1">
            <UniformGrid Columns="1">
                <TextBlock Text="Find for:"/>
                <TextBox x:Name="FindForTextBox" Text="Request" Foreground="Gray" GotFocus="FindForTextBox_GotFocus"/>
            </UniformGrid>
            <Button Width="100" Height="50" Click="Button_Click">
                <TextBlock Text="Find"/>
            </Button>
        </UniformGrid>
    </Grid>
</Window>
